		<div class="hight_box">
			<section class="top-container">
				<form action="/Login/Register" method="post">
					<div class="box-container-login-small-box">
						<div class="box-container-login-div-main">
							<p class="login-word">Register</p>
							<a href="~/Login/Login" class="register-word">Already have an account? login</a>
						</div>
						<div class="box-container-login">

							<input type="hidden" id="hiddenGmail" name="gmail" value="">

							<div class="box-container-login-div">
								<p class="first-word">Username:</p>
								<input type="text" name="username" id="username" required />
								<p style="margin-left:20px;color:red;" id="username-error"></p>
							</div>
							<div class="box-container-login-div">
								<p class="first-word">Password:</p>
								<input type="password" name="password" id="password" required />
								<p style="margin-left:20px;color:red;" id="password-error"></p>
							</div>
							<div class="box-container-login-div">
								<p class="first-word">Email:</p>
								<input type="email" id="gmail" required />
								<p style="margin-left:20px;text-decoration:underline;cursor:pointer;" id="vcode">verification code</p>
								<p style="margin-left:20px;color:red;" id="email-error"></p>
							</div>
							<div class="box-container-login-div">
								<p class="first-word">Code:</p>
								<input type="text" name="code" id="code" required />
							</div>
							<div class="box-container-login-div">
								<p class="first-word">Phone(+60):</p>
								<input type="text" name="phone" id="phone" required />
								<p style="margin-left:20px;color:red;" id="phone-error"></p>
							</div>
							<div class="box-container-login-div">
								<p class="first-word">Gender:</p>
								<select class="select-box" name="gender" id="gender">
									<option value="0">Male</option>
									<option value="1">Female</option>
									<option value="2">Other</option>
								</select>
							</div>
							<div class="box-container-login-div">
								<p class="first-word">Security Question:</p>
								<select class="select-box" name="security_question" id="security_question">
									<option value="0">Mother's name</option>
									<option value="1">Grandfather's name</option>
									<option value="2">City of father's birth</option>
									<option value="3">Name of one of your teachers</option>
									<option value="4">Model of your personal computer</option>
									<option value="5">Name of your favorite restaurant</option>
									<option value="6">Last four digits of your driver's license</option>
								</select>
							</div>
							<div class="box-container-login-div">
								<p class="first-word">Answer:</p>
								<input type="text" name="security_question_answers" id="security_question_answers" required />
								<p style="margin-left:20px;color:red;">@ViewBag.security_question_answers</p>
							</div>
							<div class="button-login">
								<button type="submit" id="stb">Register</button>
							</div>
						</div>
					</div>
				</form>
			</section>
